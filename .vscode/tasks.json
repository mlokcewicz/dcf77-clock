{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "configure",
            "type": "shell",
            "command": "cmake --preset v0.0.1",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "build",
            "type": "shell",
            "command": "cmake --build --preset v0.0.1",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "cmake --build build --target clean --parallel",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "debug",
            "type": "shell",
            "command": "C:/embedded_tools/avrdude/avrdude.exe -pm88 -cusbasp -U flash:w:dcf77_clock.elf:a",
            "options": {
                "cwd": "${workspaceFolder}/build/app"
            },
            "problemMatcher": []
        },
        {
            "label": "eeprom_flash",
            "type": "shell",
            "command": "C:/embedded_tools/avrdude/avrdude.exe -pm88 -cusbasp -U eeprom:w:dcf77_clock.elf:a",
            "options": {
                "cwd": "${workspaceFolder}/build/app"
            }
        },
        {
            "label": "fusebits_flash",
            "type": "shell",
            "command": "C:/embedded_tools/avrdude/avrdude.exe -pm88 -cusbasp -U lfuse:w:dcf77_clock.elf:a -U hfuse:w:dcf77_clock.elf:a -U efuse:w:dcf77_clock.elf:a -U lock:w:dcf77_clock.elf:a",
            "options": {
                "cwd": "${workspaceFolder}/build/app"
            }
        }
    ]
}